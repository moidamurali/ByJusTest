<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.murali.byjus">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_byjus"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_byjus"
        android:supportsRtl="true"
        android:theme="@style/Theme.ByJus">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/colors" />

        <activity android:name="com.murali.byjus.ui.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.DetailsActivity"/>
    </application>

</manifest>